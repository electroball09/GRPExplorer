<Window x:Class="GRPExplorerGUI.Extra.BigfilePackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRPExplorerGUI.Extra"
        mc:Ignorable="d"
        Title="BigfilePackingWindow" Height="99" Width="393.5" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Button x:Name="btnUnpackBigfile" Content="Unpack" HorizontalAlignment="Left" Margin="9,38,0,0" VerticalAlignment="Top" Width="120" Click="btnUnpackBigfile_Click"/>
        <TextBox x:Name="txtUnpackDir" HorizontalAlignment="Left" Height="23" Margin="9,10,0,0" TextWrapping="Wrap" Text="C:\GEX_Test\" VerticalAlignment="Top" Width="368"/>
        <Button x:Name="btnPackBigFile" Content="Pack" HorizontalAlignment="Left" Margin="135,38,0,0" VerticalAlignment="Top" Width="120" Click="btnPackBigFile_Click"/>
        <CheckBox x:Name="chkCompress" Content="Compress" HorizontalAlignment="Left" Margin="260,43,0,0" VerticalAlignment="Top" IsChecked="True"/>

    </Grid>
</Window>
